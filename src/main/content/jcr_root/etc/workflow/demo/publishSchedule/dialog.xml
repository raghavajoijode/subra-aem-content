<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    rootPath="/content/demo"
    title="Publishing Schedule"
    touchUiDialogPath="/etc/workflow/demo/publishSchedule/cq:dialog"
    xtype="dialog">
    <items jcr:primaryType="cq:WidgetCollection">
        <site-path
            jcr:primaryType="cq:Widget"
            fieldLabel="Website Path::"
            name="site-path"
            rootPath="/content/demo"
            xtype="pathfield"/>
        <schedule
            jcr:primaryType="cq:Widget"
            fieldLabel="Activation Time:"
            maxValue="today"
            min="now"
            minValue="today"
            name="schedule"
            startValue="today"
            value="now"
            xtype="datetime"/>
    </items>
</jcr:root>
